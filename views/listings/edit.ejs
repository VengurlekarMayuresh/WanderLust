<%layout("/layouts/boiler")%>
<body>
    <h3 class="mt-3">Edit Listing</h3>
<div class="row mb-3">
    <form action="/listings/<%=listing._id%>?_method=PUT" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
      <div class="row mb-3">  
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required><br>
        <div class="invalid-feedback">Enter the Title</div>
    </div>
    <div class="row mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" id="" value=""><%=listing.description%></textarea><br>
        <div class="invalid-feedback">Enter valid description</div>
     </div>    
     <!-- <div class="row mb-3">
        Original Image Listing <br>
        <img src="<%=ogUrl%>" alt="">
     </div> -->
     <div class="row mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input type="file" name="listing[image]" class="form-control" id="" ><br>
     </div>
        <div class="row ">
            <div class=" col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" class="form-control" name="listing[price]" value="<%=listing.price%>"><br>
                <div class="invalid-feedback">Enter valid price</div>
            </div>
           <div class=" col-md-8">
            <label for="location" class="form-label">location</label>
            <input type="text" name="listing[location]" class="form-control" id="" value="<%=listing.location %>"><br>
            <div class="invalid-feedback">Enter valid Location</div>
        </div>
        </div>
       <div>
        <label for="country" class="form-label">Country</label>
        <input type="text" name="listing[country]" class="form-control" value="<%=listing.country %>"><br>
        <div class="invalid-feedback">Enter valid Country</div>   
    </div>
        <button class="btn cst-btn">Edit</button>
    </form>
</div>
</body>
</html>