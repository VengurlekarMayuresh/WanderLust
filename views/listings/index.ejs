<%layout("/layouts/boiler")%>
<body>
    <br>    
  <!-- Bootstrap CSS -->
<!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> -->

<div id="categoryCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="d-flex justify-content-center align-items-center flex-column">
                <i class="fa-solid fa-fire fa-2x"></i>
                <p>Trending</p>
            </div>
        </div>
        <div class="carousel-item">
            <div class="d-flex justify-content-center align-items-center flex-column">
                <i class="fa-solid fa-mountain-city fa-2x"></i>
                <p>Iconic cities</p>
            </div>
        </div>
        <div class="carousel-item">
            <div class="d-flex justify-content-center align-items-center flex-column">
                <i class="fa-solid fa-mountain fa-2x"></i>
                <p>Mountain</p>
            </div>
        </div>
        <div class="carousel-item">
            <div class="d-flex justify-content-center align-items-center flex-column">
                <i class="fa-brands fa-fort-awesome fa-2x"></i>
                <p>Castle</p>
            </div>
        </div>
        <div class="carousel-item">
            <div class="d-flex justify-content-center align-items-center flex-column">
                <i class="fa-solid fa-snowman fa-2x"></i>
                <p>Arctic</p>
            </div>
        </div>
        <div class="carousel-item">
            <div class="d-flex justify-content-center align-items-center flex-column">
                <i class="fa-solid fa-person-swimming fa-2x"></i>
                <p>Amazon Pools</p>
            </div>
        </div>
        <div class="carousel-item">
            <div class="d-flex justify-content-center align-items-center flex-column">
                <i class="fa-solid fa-cow fa-2x"></i>
                <p>Farms</p>
            </div>
        </div>
    </div>

    <!-- Carousel Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#categoryCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#categoryCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Bootstrap & Font Awesome Scripts
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/yourkitcode.js" crossorigin="anonymous"></script> -->

    <!-- <h1>All Listings</h1> -->
    
<br>
<ul>
 <div class="row row-cols-lg-3 row-cols-mid-2 row-cols-sm-1">   <%for(let list of allList){ %>
    <a href="listings/<%=list._id %> " class="list-link">
        <div class="card col listing-card" >
            <img src="<%=list.image.url%>" class="card-img-top" alt="...">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <h5 class="card-title"><b><%=list.title %></b></h5>
              <p class="card-text"><%=list.description %></p>
              <p>&#8377;<%=list.price.toLocaleString("en-IN")%>/night</p>
              <!-- <a href="/listings/<%=list._id %>" class="btn btn-primary">Go somewhere</a> -->
            </div>
          </div>
    </a>
  
<% } %> </div>
</ul>
<form action="/listings/new" method="get">
    <button class="btn cst-btn btn-primary mb-3 ">Create new</button>
</form>
</body>
</html>



    